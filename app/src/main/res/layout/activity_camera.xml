<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        tools:context="com.seerslab.argear.sample.ui.CameraActivity">

        <FrameLayout
            android:id="@+id/camera_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:background="@android:color/black" />

        <View
            android:id="@+id/top_ratio_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentTop="true"
            android:background="@android:color/white"
            android:visibility="invisible" />

        <View
            android:id="@+id/bottom_ratio_view"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:background="@android:color/white"
            android:visibility="invisible" />

        <Button
            android:id="@+id/more_button"
            android:layout_width="52dp"
            android:layout_height="52dp"
            android:layout_alignParentStart="true"
            android:onClick="onClickButtons"
            android:background="@drawable/btn_more"/>

<!--        <LinearLayout-->
<!--            android:layout_width="wrap_content"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:orientation="vertical"-->
<!--            android:gravity="center"-->
<!--            android:layout_alignParentEnd="true" >-->
<!--            <Button-->
<!--                android:id="@+id/camera_switch_button"-->
<!--                android:layout_width="52dp"-->
<!--                android:layout_height="52dp"-->
<!--                android:onClick="onClickButtons"-->
<!--                android:background="@drawable/btn_camera_switch"/>-->
<!--        </LinearLayout>-->

        <!--more layout-->
        <include
            android:id="@+id/more_layout"
            layout="@layout/layout_more"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"/>

        <LinearLayout
            android:layout_above="@id/functions_layout"
            android:id="@+id/shutter_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingStart="43dp"
            android:layout_marginBottom="143.5dp">

            <org.itniorwings.aivita.ui.widget.UnderLineView
                android:id="@+id/shutter_photo_button"
                android:layout_width="43dp"
                android:layout_height="21.5dp"
                android:layout_marginStart="11dp"
                android:tag="0"
                android:onClick="onClickButtons"
                app:text="Photo"
                app:select="true"/>

            <org.itniorwings.aivita.ui.widget.UnderLineView
                android:id="@+id/shutter_video_button"
                android:layout_width="43dp"
                android:layout_height="21.5dp"
                android:layout_marginStart="11dp"
                android:tag="1"
                android:onClick="onClickButtons"
                app:text="Video"
                app:select="false"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_250sdp"
            android:orientation="vertical"
            android:id="@+id/camera_options"
            android:layout_marginTop="50dp"
            android:layout_marginRight="15dp"
            android:layout_alignParentRight="true">

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:padding="3dp"
                android:onClick="onClickButtons"
                android:scaleType="fitCenter"
                android:id="@+id/camera_switch_button"
                android:background="@color/transparent"
                android:src="@drawable/ic_rotate_cam"/>


            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitCenter"
                android:id="@+id/camera_speed"
                android:src="@drawable/ic_photography"/>

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/transparent"
                android:text="Speed"/>

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitCenter"
                android:id="@+id/beauty_button"
                android:onClick="onClickButtons"
                android:src="@drawable/ic_effect"/>

            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/transparent"
                android:text="Beauty"/>
            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitCenter"
                android:id="@+id/filter_button"
                android:onClick="onClickButtons"
                android:src="@drawable/ic_filter"/>
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/transparent"
                android:text="Filters"/>

            <ImageView
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:padding="5dp"
                android:layout_marginTop="10dp"
                android:scaleType="fitCenter"
                android:id="@+id/timer"
                android:src="@drawable/ic_timer"/>
            <TextView
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/transparent"
                android:text="Timer"/>
        </LinearLayout>

        <!--functions layout-->
        <LinearLayout
            android:id="@+id/functions_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="29dp">

<!--            <Button-->
<!--                android:id="@+id/filter_button"-->
<!--                android:layout_width="52dp"-->
<!--                android:layout_height="55dp"-->
<!--                android:onClick="onClickButtons"-->
<!--                android:background="@drawable/filter_btn_default"/>-->

            <Button
                android:id="@+id/sticker_button"
                android:layout_width="52dp"
                android:layout_height="55dp"
                android:layout_marginStart="23.5dp"
                android:onClick="onClickButtons"
                android:background="@drawable/sticker_btn_default"/>

            <ToggleButton
                android:id="@+id/shutter_button"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginStart="23.5dp"
                android:text=""
                android:textOn=""
                android:textOff=""
                android:checked="false"
                android:onClick="onClickButtons"
                android:background="@drawable/a2"/>

<!--            <Button-->
<!--                android:id="@+id/beauty_button"-->
<!--                android:layout_width="52dp"-->
<!--                android:layout_height="55dp"-->
<!--                android:layout_marginStart="23.5dp"-->
<!--                android:onClick="onClickButtons"-->
<!--                android:background="@drawable/beauty_btn_default"/>-->

            <Button
                android:id="@+id/bulge_button"
                android:layout_width="52dp"
                android:layout_height="55dp"
                android:layout_marginStart="23.5dp"
                android:onClick="onClickButtons"
                android:background="@drawable/bulge_btn_default"/>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="invisible" />

        <FrameLayout
            android:id="@+id/slot_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true">
        </FrameLayout>

    </RelativeLayout>
</layout>